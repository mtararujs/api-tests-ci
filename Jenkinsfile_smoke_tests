pipeline {
    agent any
    parameters {
        string(name: 'ENVIRONMENT', defaultValue: 'DEV', description: 'Environment for test execution')
    }
    stages { 
        stage('run-tests') {
            steps {
                script {
                    sh "docker run --rm --name test --entrypoint=cucumber mtararujs/ubuntu_ruby_executor PLATFORM=${params.ENVIRONMENT}"
                } 
            }
        }
    }
}